<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:id="@+id/cardCountry"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_flagcountry"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/tv_namecountry"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Indonesia"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img_flagcountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_capitalcountry"
            android:text="Jakarta"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/img_flagcountry"
            android:layout_below="@+id/tv_namecountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_languangecountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_capitalcountry"
            android:layout_toRightOf="@+id/img_flagcountry"
            android:text="Bahasa Indonesia"
            android:textColor="@color/teal_700"
            android:textSize="15sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>